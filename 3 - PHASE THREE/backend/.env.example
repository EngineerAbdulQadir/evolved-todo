# Evolved Todo Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string from Neon or other PostgreSQL provider
# Format: postgresql://user:password@host:5432/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx-xxx.region.neon.tech/evolved_todo?sslmode=require

# ============================================================================
# SECURITY
# ============================================================================
# JWT secret key - MUST be at least 32 characters
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-this

# Better Auth secret key - MUST be at least 32 characters
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
BETTER_AUTH_SECRET=your-better-auth-secret-minimum-32-characters-change-this

# JWT expiration time in days (default: 7)
JWT_EXPIRATION_DAYS=7

# ============================================================================
# APPLICATION
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=true

# ============================================================================
# CORS
# ============================================================================
# Frontend URL for CORS configuration
# Development: http://localhost:3000
# Production: https://your-app.vercel.app
FRONTEND_URL=http://localhost:3000

# ============================================================================
# SERVER
# ============================================================================
# Server host (default: 0.0.0.0)
HOST=0.0.0.0

# Server port (default: 8000)
PORT=8000

# ============================================================================
# RATE LIMITING
# ============================================================================
# Maximum requests per minute per user (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# Rate limit window in seconds (default: 60)
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# LOGGING
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. NEVER commit .env file to version control
# 2. Use strong, randomly generated secrets in production
# 3. Rotate secrets regularly (at least every 90 days)
# 4. Use environment-specific values (different secrets for dev/staging/prod)
# 5. Enable SSL/TLS in production (sslmode=require in DATABASE_URL)
# 6. Keep DEBUG=false in production
# 7. Use secure password hashing (already implemented with bcrypt)
